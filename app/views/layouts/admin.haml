!!!
%html
  %head
    %meta{:content => "text/html;charset=UTF-8", "http-equiv" => "content-type"}/
    %meta{:charset => "utf-8"}/
    %title Company Admin
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, shrink-to-fit=no", :name => "viewport"}/
    %link{:href => "pages/ico/60.png", :rel => "apple-touch-icon"}/
    %link{:href => "pages/ico/76.png", :rel => "apple-touch-icon", :sizes => "76x76"}/
    %link{:href => "pages/ico/120.png", :rel => "apple-touch-icon", :sizes => "120x120"}/
    %link{:href => "pages/ico/152.png", :rel => "apple-touch-icon", :sizes => "152x152"}/
    -# %link{:href => "favicon.ico", :rel => "icon", :type => "image/x-icon"}/
    %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}/
    %meta{:content => "yes", :name => "apple-touch-fullscreen"}/
    %meta{:content => "default", :name => "apple-mobile-web-app-status-bar-style"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/ 
    = javascript_include_tag 'header', 'data-turbolinks-track': 'reload', 'data-turbolinks-eval': true
    %link{:href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css", :rel => "stylesheet"}/
    = stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track': 'reload'
    = csrf_meta_tag
    %script{:src => "https://ajax.aspnetcdn.com/ajax/jquery.validate/1.7/jquery.validate.min.js", :type => "text/javascript"}
  %body.fixed-header.menu-pin
    = render partial: 'shared/sidebar'
    .page-container
      = render partial: 'shared/header'
      .page-content-wrapper
        .content
          .jumbotron{"data-pages" => "parallax"}
            .container-fluid.container-fixed-lg.sm-p-l-0.sm-p-r-0.pb-3.pt-3
              -# .inner{style:"padding-bottom:100px;"}
              = render "shared/flash_messages"
              = yield
            
          .container-fluid.container-fixed-lg
        .container-fluid.container-fixed-lg.footer
          .copyright.sm-text-center
            %p.small.no-margin.pull-left.sm-pull-reset
              %span.hint-text Copyright Â© 2019
              = succeed "." do
                %span.font-montserrat Company
              %span.hint-text All rights reserved.
            .clearfix
    = javascript_include_tag 'admin', 'data-turbolinks-track': 'reload', 'data-turbolinks-eval': true    
